{
    "manifest_version": 3,
    "name": "SafeSpeak - AI Guardian",
    "version": "1.0",
    "description": "Protects children from online toxicity using AI.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "http://127.0.0.1:10000/*",
        "http://localhost:10000/*",
        "https://safespeak-zoec.onrender.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}